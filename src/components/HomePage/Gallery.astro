---
import proyek from "../../assets/img/mobil-angkut-puing.jpeg"
import pindahan from "../../assets/img/pindahan-rumah.jpeg"
import berangkat from "../../assets/img/truk-siap.jpeg"
import CDNImages from "../CDNImages.astro"
---

<section id="galeri" class="py-20 px-6 bg-[var(--color-card)]">
  <div class="max-w-6xl mx-auto">
    <h2 class="text-3xl md:text-4xl font-bold text-[var(--color-foreground)] mb-8 text-center">
      Galeri Kegiatan TIGILI
    </h2>

    <div class="grid gap-4 md:grid-cols-3 sm:grid-cols-2">
      <!-- Gambar 1 -->
      <div class="relative overflow-hidden rounded-xl shadow-md group">
        <CDNImages src={proyek} alt="Proses buang puing" class="w-full h-60 object-cover group-hover:scale-105 transition" />
        <div class="absolute bottom-0 left-0 right-0 bg-black bg-opacity-50 text-white text-sm p-2">
          Buang Puing di Lokasi Proyek
        </div>
      </div>

      <!-- Gambar 2 -->
      <div class="relative overflow-hidden rounded-xl shadow-md group">
        <CDNImages src={pindahan} alt="Layanan pindahan" class="w-full h-60 object-cover group-hover:scale-105 transition" />
        <div class="absolute bottom-0 left-0 right-0 bg-black bg-opacity-50 text-white text-sm p-2">
          Pindahan Rumah Client
        </div>
      </div>

      <!-- Gambar 3 -->
      <div class="relative overflow-hidden rounded-xl shadow-md group">
        <CDNImages src={berangkat} alt="Truk siap berangkat" class="w-full h-60 object-cover group-hover:scale-105 transition" />
        <div class="absolute bottom-0 left-0 right-0 bg-black bg-opacity-50 text-white text-sm p-2">
          Armada TIGILI Siap Jalan
        </div>
      </div>
    </div>
  </div>
</section>
