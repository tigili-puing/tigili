---
// src/pages/search.astro
import Layout from '../layouts/BaseLayout.astro';
import SearchForm from '../components/SearchForm.astro'; // Ganti nama jika berbeda
---
<Layout title="Pencarian Artikel">
  <main class="container mx-auto px-4 py-12 sm:py-16">
    <div class="max-w-2xl mx-auto text-center">
      <h1 class="text-4xl md:text-5xl font-bold text-maunguli-dark">
        Cari Artikel
      </h1>
      <p class="mt-4 text-lg text-maunguli-subtle">
        Ketik judul atau topik yang ingin Anda temukan di dalam blog kami.
      </p>
    </div>

    <div class="mt-12 max-w-2xl mx-auto">
      <SearchForm />
    </div>
  </main>
</Layout>